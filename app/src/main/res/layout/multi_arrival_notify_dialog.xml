<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="fill_parent">

    <RelativeLayout
        android:id="@+id/arg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="20dp">


        <NumberPicker
            android:id="@+id/notify_dialog_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/notification_confirmation_time_description"
            android:layout_alignStart="@+id/notification_confirmation_time_description"
            android:layout_below="@+id/textView"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/notification_time_description_text"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_below="@+id/trip_options_radio_group"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp" />

        <TextView
            android:id="@+id/notify_time_units"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignTop="@+id/notify_dialog_time"
            android:layout_alignBottom="@+id/notify_dialog_time"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="2dp"
            android:layout_toEndOf="@+id/notify_dialog_time"
            android:layout_toRightOf="@+id/notify_dialog_time"
            android:gravity="center"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:text="@string/notification_time_units"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/arrival_notification_example"
            android:adjustViewBounds="true"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/trip_options_radio_group"
            android:layout_alignEnd="@+id/trip_options_radio_group"
            android:contentDescription="@string/notification_example_content_description" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/notification_example_caption"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_below="@+id/imageView"
            android:layout_centerHorizontal="true"
            android:textStyle="italic" />

        <RadioGroup
            android:id="@+id/trip_options_radio_group"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="false"
            android:layout_below="@+id/notification_confirmation_time_description"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentEnd="true"/>

        <TextView
            android:id="@+id/notification_confirmation_time_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="@string/notification_vehicle_prompt_text"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_below="@+id/imageView"
            android:layout_alignLeft="@+id/textView"
            android:layout_alignStart="@+id/textView" />

    </RelativeLayout>
</ScrollView>