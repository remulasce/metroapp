<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1.0"
    android:gravity="fill_horizontal"
    android:descendantFocusability="blocksDescendants"
    android:paddingBottom="0dp"
    android:paddingLeft="10dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp">

    <ImageView
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:id="@+id/service_request_cancel"
        android:src="@drawable/remove_button_x"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:scaleType="centerInside"
        android:contentDescription="@string/service_request_cancel_button_hint"
        android:layout_alignBottom="@+id/service_request_text"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/service_request_example_name"
        android:id="@+id/service_request_text"
        android:layout_gravity="center_vertical"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:layout_toLeftOf="@+id/service_request_cancel"
        android:layout_toStartOf="@+id/service_request_cancel" />


</RelativeLayout>