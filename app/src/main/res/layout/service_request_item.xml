<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1.0"
    android:gravity="fill_horizontal"
    android:paddingBottom="6dp"
    android:paddingLeft="10dp"
    android:paddingTop="6dp">

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/service_request_cancel"
        android:background="@drawable/abc_ic_clear_holo_light"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Service Request"
        android:id="@+id/service_request_text"
        android:layout_weight="1.0"
        android:layout_gravity="center_vertical"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/service_request_cancel"
        android:layout_toStartOf="@+id/service_request_cancel" />


</RelativeLayout>